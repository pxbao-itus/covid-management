<link rel="stylesheet prefetch"
  href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
<div class="modal fade" id="manager_placeChange_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Thay đổi nơi điều trị
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="placeIdForm">
          <div class="form-group">
            <label for="exampleInputEmail1">
              Địa chỉ hiện tại:
            </label>
            <h5 id="noiDieuTriModal">
            </h5>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">
              Địa chỉ mới:
            </label>
            <input type="text" style="display: none;" name="userid" value="{{MaNguoiLienQuan}}">
          </div>
          <div class="btn-group">
            <select name="treatmentid" class="custom-select" id="noiDieuTri">
              <option disabled selected style="display: none;">Địa chỉ mới</option>
            </select>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">
              Hủy
            </button>
            <button type="submit" class="btn btn-primary">
              Thêm
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
