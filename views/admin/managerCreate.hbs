
<div class="card mx-auto align-middle mt-5" style="width:60%">
    <div class="card-body" id="form-card">
        <h2>Tạo tài khoản người quản lý</h2>
        {{#if msg}}
            <div class="alert {{#if status}} alert-success {{else}} alert-danger {{/if}} mx-auto">{{msg}}</div>
        {{/if}}
        <form id="form" action="/admin/manager/create" enctype='multipart/form-data' method="POST">
            <div class="form-group">
                <label for="username">Tên tài khoản</label>
                <input id="username" type="text" class="form-control border" name="username" placeholder="Tên tài khoản">
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input id="password" type="password" class="form-control border" name="password" placeholder="Mật khẩu">
            </div>           
            <button id="submit" type="submit" class="btn btn-primary mr-5">Tạo tài khoản</button>
            <div id="import" class="btn btn-primary">Thêm bằng file</div>
        </form>
    </div>
</div>
  