
<h3 class="ml-5 mt-2">Danh sách người quản lý</h3>

<table class="table table-striped bg-white ml-1">
    <thead class="bg-success text-light">
        <tr>
            <th scope="col">Mã điểm ĐTCL</th>
            <th scope="col">Tên điểm ĐTCL</th>
            <th scope="col">Sức chứa</th>
            <th scope="col">Số lượng hiện tại</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Loại cơ sở</th>
        </tr>
    </thead>
    <tbody>
      {{#if treatments}}
        {{#each treatments}}
          <tr>
            <td><a href="/admin/treatment/detail?id={{this.MaNoiDTCL}}" class="btn btn-primary">{{this.MaNoiDTCL}}</a> </td>
            <td>{{this.TenNoiDTCL}}</td>
            <td>{{this.SucChua}}</td>
            {{#if this.status}}
              <td class="text-danger">{{this.SoLuongHienTai}}</td>            
            {{else}}
              <td class="text-success">{{this.SoLuongHienTai}}</td>   
            {{/if}}
            <td>{{this.DiaChi}}</td>
            {{#if this.Loai}}
              <td class="text-danger">Điểm điều trị</td>            
            {{else}}
              <td class="text-success">Điểm cách ly</td>   
            {{/if}}
          </tr>
          {{/each}}
      {{else}}
        <tr>
            <td class="text-center py-4 text-gray" colspan="6">Không tìm thấy điểm điều trị, cách ly nào</td>
        </tr>
      {{/if}}
    </tbody>
</table>