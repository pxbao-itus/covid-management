{{> navbar text='Tìm kiếm gói nhu yếu phẩm ... '}}

<div class="container-fluid">
  <div class="row">
    {{> sidebar where='package'}}

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

      <div id="line-title">
        <h2 class="title">Danh sách gói nhu yếu phẩm</h2>
        <div class="btn-toolbar mb-2 mb-md-0 group-btn-action">
          <div class="btn-group mr-2">
            <button class="btn btn-primary" data-toggle="modal" data-target="#modal-insert">Thêm gói nhu yếu phẩm</button>
          </div>
          <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
              aria-expanded="false" style="    width: 200px;">
              Sắp xếp theo
            </button>
            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end"
              style="    width: 200px;position: absolute; transform: translate3d(-24px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
              <button class="dropdown-item sort-item" type="button" value="dg">Đơn giá
                <span id="dgIncrease" style="float: right">&uarr;</span>
                <span id="dgDecrease" style="display:none;float: right">&darr;</span>
              </button>
              <button class="dropdown-item sort-item" type="button" value="sl">Số lượng
                <span id="slIncrease" style="float: right">&uarr;</span>
                <span id="slDecrease" style="display:none;float: right">&darr;</span>
              </button>
              <button class="dropdown-item sort-item" type="button" value="mgh">Mức giới hạn
                <span id="mghIncrease" style="float: right">&uarr;</span>
                <span id="mghDecrease" style="display:none;float: right">&darr;</span>
              </button>
              <button class="dropdown-item sort-item" type="button" value="tggh">Thời gian giới hạn
                <span id="tgghIncrease" style="float: right">&uarr;</span>
                <span id="tgghDecrease" style="display:none;float: right">&darr;</span>
              </button>
              </div>
          </div>
        </div>
      </div>

      <div class="table-responsive">
        <div class=" row row-cols-1 row-cols-md-3 g-4">
        </div>
        <div class="mb-3"></div>
        {{> pagination }}
      </div>
      <style>
        #pagination-nav {
          position: relative;
        }
      
        .table-responsive {
          overflow-x: hidden !important;
        }
      </style>
    </main>
  </div>
</div>

