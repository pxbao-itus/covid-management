{{> navbar text='Tìm kiếm nhu yếu phẩm ... '}}

<div class="mb-6"></div>
<div class="container-fluid">
    <div class="row">
        {{> sidebar where='user'}}

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

            <div class="line-1">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <button id="btn-back" class="btn btn-primary">
                        Quay lại</button>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <button class="btn btn-primary" data-toggle="modal"
                            data-target="#fuck">Thêm người liên đới</button>
                        <div class="mb-2 mr-sm-2"></div>
                        <button class="btn btn-primary" data-toggle="modal"
                            data-target="#manager_statusChange_modal">Thay đổi trạng thái</button>
                        <div class="mb-2 mr-sm-2"></div>
                        <button class="btn btn-primary" data-toggle="modal"
                            data-target="#manager_placeChange_modal">Thay
                            đổi nơi điều trị</button>
                    </div>
                </div>
                <h2>
                    Chi tiết người liên quan
                </h2>
            </div>

            <div class="table-responsive">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            </thead>

                            <tbody>
                                <tr>
                                    <th scope="row">Họ và tên:</th>
                                    <td>{{userDetail.HoTen}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">CMND/CCCD:</th>
                                    <td>{{userDetail.CCCD}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Năm sinh:</th>
                                    <td>{{userDetail.NgaySinh}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Địa chỉ:</th>
                                    <td>{{userDetail.DiaChi}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Trạng thái hiện tại:</th>
                                    <td>{{userDetail.TrangThaiHienTai}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Nơi điều trị/cách li:</th>
                                    <td id="noiDieuTriM">{{userDetail.NoiDieuTri}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <h1>Danh sách người liên quan tới bệnh nhân</h1>
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            </thead>
                            <tbody>

                                <tr>
                                    <th>ID</th>
                                    <th>Họ và tên</th>
                                    <th>Tình trạng</th>
                                </tr>
                                {{#each relatedUsers}}
                                <tr>
                                    <td>{{MaNguoiLienQuan}}</td>
                                    <td>{{HoTen}}</td>
                                    <td>{{TrangThaiHienTai}}</td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{{> manager_placeChange_modal userDetail}}
{{> modal_lq userDetail}}
{{> manager_statusChange_modal userDetail}}

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>