{{> navbar text='Tìm kiếm thông tin thanh toán ... '}}

<div class="mb-6"></div>

<div class="container-fluid">
  <div class="row">
    {{> sidebar where='payment'}}

    <main role="main" id="content" class="col-md-9 ml-sm-auto col-lg-10 px-4">

      <div id="line-title">
        <h2 class="title">Quản lý thanh toán</h2>
        <div class="btn-toolbar mb-2 mb-md-0 group-btn-action">
          <div class="btn-group mr-2">
            <button class="btn btn-primary" data-toggle="modal" data-target="#modal-settings">Tuỳ chỉnh ⚙️</button>
          </div>
          <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
              aria-expanded="false">
              Sắp xếp theo
            </button>
            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end"
              style="position: absolute; transform: translate3d(-24px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
              <button class="dropdown-item" type="button">Ngày kỳ hạng còn lại</button>
              <button class="dropdown-item" type="button">Số tiền cần thanh toán</button>
              <button class="dropdown-item" type="button">Trạng thanh toán tối thiểu</button>
              <button class="dropdown-item" type="button">Trạng thái tín dụng</button>
            </div>
          </div>
        </div>
      </div>
      {{#if minimumLimit}}
      <div class="row d-flex justify-content-right">
        <div class="col-sm text-right mr-3">
          <h5 class="font-weight-bold py-2">Hạn mức tối thiểu: <span>{{formatCurrency minimumLimit}} VNĐ</span></h5>
        </div>
      </div>
      {{/if}}
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">STT</th>
            <th scope="col">Họ tên</th>
            <th scope="col">Số dư nợ hiện tại</th>
            <th scope="col">Trạng thái thanh toán tối thiểu</th>
            <th scope="col">Gửi thông báo</th>
          </tr>
        </thead>
        <tbody>
          {{#each payments}}
            <tr>
              <td class="item-id">{{MaNguoiLienQuan}}</td>
              <td>{{MaNguoiLienQuan}} </td>
              <td>{{HoTen}}</td>
              <td>{{formatCurrency SoDuNo}} VNĐ</td>
              <td>{{TinhTrang}}</td>
              <td>
                <button type="button" class="btn btn-primary btn-info">Gửi Thông báo</button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{> pagination }}
      <style>
        #pagination-nav{
          position: relative;
        }
        #pagination-nav ul li {
          cursor: pointer;
        }
      </style>
    </main>
  </div>
</div>
{{> payment/settingsModal}}

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js">  </script>